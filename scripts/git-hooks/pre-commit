#!/usr/bin/env bash
set -euo pipefail

# Keep this hook minimal and deterministic. CI enforces the full checks.

if ! command -v gitleaks >/dev/null 2>&1; then
  echo "gitleaks not found. Install it to commit safely." >&2
  echo "macOS: brew install gitleaks" >&2
  exit 1
fi

# Only scan staged content so local untracked files don't block commits.
gitleaks detect --staged --redact

# Fail on whitespace errors in staged diff.
git diff --cached --check

